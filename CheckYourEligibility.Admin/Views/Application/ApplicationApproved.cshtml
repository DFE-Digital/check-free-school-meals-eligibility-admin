@inject IConfiguration Configuration
@model CheckYourEligibility.Admin.ViewModels.ApplicationDetailViewModel

@{
    ViewData["Title"] = "Application approved";
}

<div class="govuk-grid-column-two-thirds">
    @* <a class="govuk-back-link" href="#" onclick="history.back(); return false;">Back</a> *@
    <a class="govuk-back-link-nolink"></a>

    <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">@ViewData["Title"]</h1>
        <div class="govuk-panel__body">
            Application reference number<br><strong>@Model.Reference</strong>
        </div>
    </div>

    <h2 class="govuk-heading-m">What will happen next</h2>
    <p class="govuk-body">
        The school will receive a notification to finalise the application and add the details to their Management Information System (MIS).
    </p>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">
                @Html.ActionLink("Review more applications", "PendingApplications", "Application", null, new { @class = "govuk-link" })
            </p>
            <hr size="0" class="govuk-section-break govuk-section-break--xl govuk-section-break">
            <h2 class="govuk-heading-s">We want to get your feedback</h2>

            <p class="govuk-body">
                <a href="@Configuration["FeedbackUrl"]" target="_blank" class="govuk-link">
                    What did you think of this service?
                </a> (takes 30 seconds)
            </p>
        </div>
    </div>
  